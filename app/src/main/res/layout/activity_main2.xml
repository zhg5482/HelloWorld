<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="main.com.helloworld.Main2Activity">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/ll_edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_root"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/real_text"
        android:layout_below="@+id/ll_edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/txt5_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#FFFddd"
            android:textColor="#131212"
            android:textSize="20dp"
            android:text="ereer"/>

        <TextView
            android:layout_below="@+id/txt5_1"
            android:id="@+id/txt5_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#FFFddd"
            android:textColor="#131212"
            android:textSize="20dp"
            android:text="dgergre"/>

        <TextView
            android:layout_below="@+id/txt5_2"
            android:id="@+id/txt5_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#FFFddd"
            android:textColor="#131212"
            android:textSize="20dp"
            android:text="dgergre"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/real_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorAccent"
            android:textSize="18dp"
            android:text="打开记事本"
            />

    </RelativeLayout>
    <include layout="@layout/webview" />

</RelativeLayout>
