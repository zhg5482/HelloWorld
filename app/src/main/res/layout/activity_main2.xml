<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon2"
    android:orientation="vertical"
    tools:context="main.com.helloworld.Main2Activity">

    <include layout="@layout/title_bar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/tl_root"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tl_root"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/real_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_edit2"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/txt5_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="ereer"
                    android:textColor="#1114b6"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt5_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt5_1"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="dgergre"
                    android:textColor="#1114b6"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt5_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt5_2"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="dgergre"
                    android:textColor="#1114b6"
                    android:textSize="20dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/real_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btn_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/colorAccent"
                    android:text="打开记事本"
                    android:textSize="18dp" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/bottom" />

    <include layout="@layout/webview" />

</LinearLayout>
